{
  "name": "micro-rollbar",
  "version": "0.3.0",
  "description": "Rollbar error handler for Zeit's Micro",
  "main": "lib/index.js",
  "repository": "https://github.com/bmealhouse/micro-rollbar.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "files": [
    "lib/index.js"
  ],
  "scripts": {
    "build": "npm run lint && npm test",
    "lint": "xo",
    "precommit": "lint-staged",
    "prepush": "npm run build",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --no-semi --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  },
  "xo": {
    "envs": ["jest"],
    "extends": ["prettier"]
  },
  "dependencies": {
    "micro": "7.3.3"
  },
  "devDependencies": {
    "eslint-config-prettier": "2.1.1",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "lint-staged": "3.6.1",
    "nock": "9.0.13",
    "node-fetch": "1.7.1",
    "prettier": "1.4.4",
    "rollbar": "2.0.4",
    "test-listen": "1.0.2",
    "xo": "0.18.2"
  },
  "peerDependencies": {
    "rollbar": "^2.0.4"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/micro-rollbar/issues"
  },
  "homepage": "https://github.com/bmealhouse/micro-rollbar#readme",
  "keywords": [
    "micro",
    "rollbar"
  ]
}
