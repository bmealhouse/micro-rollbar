{
  "name": "micro-rollbar",
  "version": "0.2.3",
  "description": "Rollbar error handler for Zeit's Micro",
  "main": "lib/index.js",
  "repository": "https://github.com/bmealhouse/micro-rollbar.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "files": [
    "lib/index.js"
  ],
  "scripts": {
    "build": "npm run lint && npm test",
    "lint": "xo",
    "precommit": "npm run lint && lint-staged",
    "prepush": "npm run build",
    "test": "NODE_ENV=test nyc ava -v"
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "rules": {
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "dependencies": {
    "micro": "7.3.3",
    "rollbar": "2.0.4"
  },
  "devDependencies": {
    "ava": "0.19.1",
    "husky": "0.13.3",
    "lint-staged": "3.6.0",
    "nock": "9.0.13",
    "node-fetch": "1.7.1",
    "nyc": "11.0.2",
    "prettier": "1.4.4",
    "test-listen": "1.0.2",
    "xo": "0.18.1"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/micro-rollbar/issues"
  },
  "homepage": "https://github.com/bmealhouse/micro-rollbar#readme",
  "keywords": [
    "micro",
    "rollbar"
  ]
}
