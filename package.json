    "nock": "9.0.13",
    "node-fetch": "1.7.1",
    "nyc": "11.0.2",
    "prettier": "1.4.4",
    "test-listen": "1.0.2",
    "xo": "0.18.2"
  },
  "peerDependencies": {
    "rollbar": "^2.0.4"
