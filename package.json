{
  "name": "micro-rollbar",
  "version": "1.0.4",
  "description": "Rollbar error handler for Zeit's Micro",
  "main": "lib/index.js",
  "repository": "https://github.com/bmealhouse/micro-rollbar.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6.11.0"
  },
  "files": [
    "lib/index.js",
    "lib/logger.js"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "xo && npm test",
    "release": "yarn version && git push origin master --tags && release",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --no-semi --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "extends": [
      "prettier"
    ]
  },
  "dependencies": {
    "micro": "8.0.3",
    "rollbar": "2.2.6"
  },
  "devDependencies": {
    "eslint-config-prettier": "2.3.0",
    "husky": "0.14.3",
    "jest": "20.0.4",
    "lint-staged": "4.0.4",
    "nock": "9.0.14",
    "node-fetch": "1.7.2",
    "prettier": "1.5.3",
    "release": "2.1.0",
    "test-listen": "1.0.2",
    "xo": "0.18.2"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/micro-rollbar/issues"
  },
  "homepage": "https://github.com/bmealhouse/micro-rollbar#readme",
  "keywords": [
    "micro",
    "rollbar"
  ]
}
